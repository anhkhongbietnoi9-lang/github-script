-- MC Auto Farm Script (Full Version - Fixed Cycle)
local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")
local LocalPlayer = Players.LocalPlayer

-- Variables
local autoFarmEnabled = false
local currentTarget = nil
local pinnedTarget = nil 
local farmConnection = nil
local playerIndex = 1 -- Biáº¿n Ä‘á»ƒ xoay vÃ²ng danh sÃ¡ch
local skills = {"Flowing Water", "Lethal Whirlwind Stream", "Hunter's Grasp", "Prey's Peril"}
local ultSkills = {"Crushed Rock", "Rock Splitting Fist", "The Final Hunt", "Water Stream Cutting Fist"}

-- Create ScreenGui
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "MCAutoFarm"
ScreenGui.ResetOnSpawn = false
ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
ScreenGui.Parent = LocalPlayer:WaitForChild("PlayerGui")

-- Rainbow gradient animation
local function createRainbowGradient()
    local gradient = Instance.new("UIGradient")
    gradient.Color = ColorSequence.new({
        ColorSequenceKeypoint.new(0, Color3.fromRGB(255, 0, 0)),
        ColorSequenceKeypoint.new(0.17, Color3.fromRGB(255, 127, 0)),
        ColorSequenceKeypoint.new(0.33, Color3.fromRGB(255, 255, 0)),
        ColorSequenceKeypoint.new(0.5, Color3.fromRGB(0, 255, 0)),
        ColorSequenceKeypoint.new(0.67, Color3.fromRGB(0, 0, 255)),
        ColorSequenceKeypoint.new(0.83, Color3.fromRGB(75, 0, 130)),
        ColorSequenceKeypoint.new(1, Color3.fromRGB(148, 0, 211))
    })
    
    local rotation = 0
    RunService.RenderStepped:Connect(function()
        rotation = (rotation + 2) % 360
        gradient.Rotation = rotation
    end)
    
    return gradient
end

-- Create circular menu button
local MenuButton = Instance.new("Frame")
MenuButton.Name = "MenuButton"
MenuButton.Size = UDim2.new(0, 80, 0, 80)
MenuButton.Position = UDim2.new(0.5, -40, 0.1, 0)
MenuButton.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
MenuButton.BorderSizePixel = 0
MenuButton.Parent = ScreenGui

local MenuCorner = Instance.new("UICorner")
MenuCorner.CornerRadius = UDim.new(1, 0)
MenuCorner.Parent = MenuButton

local MenuStroke = Instance.new("UIStroke")
MenuStroke.Thickness = 3
MenuStroke.Parent = MenuButton
createRainbowGradient().Parent = MenuStroke

local MenuText = Instance.new("TextLabel")
MenuText.Size = UDim2.new(1, 0, 1, 0)
MenuText.BackgroundTransparency = 1
MenuText.Text = "MC"
MenuText.TextColor3 = Color3.fromRGB(255, 255, 255)
MenuText.TextScaled = true
MenuText.Font = Enum.Font.GothamBold
MenuText.Parent = MenuButton

-- Draggable Logic
local dragging, dragInput, dragStart, startPos
local function updateDrag(input)
    local delta = input.Position - dragStart
    MenuButton.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
end

MenuButton.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        dragging = true
        dragStart = input.Position
        startPos = MenuButton.Position
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then dragging = false end
        end)
    end
end)

MenuButton.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then dragInput = input end
end)

UserInputService.InputChanged:Connect(function(input)
    if input == dragInput and dragging then updateDrag(input) end
end)

