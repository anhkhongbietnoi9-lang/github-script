---------------------------------------------------------
-- LOGIC FUNCTIONS
---------------------------------------------------------

local function useSkills()
    local character = LocalPlayer.Character
    if not character or not character:FindFirstChild("Communicate") then return end
    
    -- Left Click
    character.Communicate:FireServer({Goal = "LeftClick", Mobile = true})
    
    -- Always press G for Skills C
    character.Communicate:FireServer({MoveDirection = Vector3.zero, Goal = "KeyPress", Key = Enum.KeyCode.G})
    
    -- Use Ult & Normal Skills
    for _, sName in ipairs(ultSkills) do
        local tool = LocalPlayer.Backpack:FindFirstChild(sName) or character:FindFirstChild(sName)
        if tool then character.Communicate:FireServer({Tool = tool, Goal = "Console Move"}) end
    end
    for _, sName in ipairs(skills) do
        local tool = LocalPlayer.Backpack:FindFirstChild(sName) or character:FindFirstChild(sName)
        if tool then character.Communicate:FireServer({Tool = tool, Goal = "Console Move"}) end
    end
end

-- Cáº£i tiáº¿n viá»‡c chá»n má»¥c tiÃªu theo danh sÃ¡ch server
local function getNextTarget()
    local allPlayers = Players:GetPlayers()
    local targets = {}
    for _, p in ipairs(allPlayers) do
        if p ~= LocalPlayer then table.insert(targets, p) end
    end

    if #targets == 0 then return nil end

    -- VÃ²ng láº·p index
    if playerIndex > #targets then playerIndex = 1 end
    
    local target = targets[playerIndex]
    if target and target.Character and target.Character:FindFirstChild("Humanoid") and target.Character.Humanoid.Health > 0 then
        return target
    else
        playerIndex = playerIndex + 1
        return getNextTarget()
    end
end

local function farmPlayer(target)
    if not target or not target.Character then return end
    local character = LocalPlayer.Character
    local targetChar = target.Character
    if not character:FindFirstChild("HumanoidRootPart") or not targetChar:FindFirstChild("HumanoidRootPart") then return end
    
    character.HumanoidRootPart.CFrame = targetChar.HumanoidRootPart.CFrame * CFrame.new(0, 4, 0) * CFrame.Angles(math.rad(-90), 0, 0)
    useSkills()
end

local function startAutoFarm()
    if farmConnection then farmConnection:Disconnect() end
    farmConnection = RunService.Heartbeat:Connect(function()
        if autoFarmEnabled then
            if pinnedTarget then
                if pinnedTarget.Parent and pinnedTarget.Character and pinnedTarget.Character:FindFirstChild("Humanoid") and pinnedTarget.Character.Humanoid.Health > 0 then
                    farmPlayer(pinnedTarget)
                else
                    pinnedTarget = nil
                end
            else
                -- Tá»± Ä‘á»™ng Ä‘á»•i má»¥c tiÃªu khi má»¥c tiÃªu cÅ© cháº¿t hoáº·c khÃ´ng tá»“n táº¡i
                if not currentTarget or not currentTarget.Parent or not currentTarget.Character or not currentTarget.Character:FindFirstChild("Humanoid") or currentTarget.Character.Humanoid.Health <= 0 then
                    playerIndex = playerIndex + 1
                    currentTarget = getNextTarget()
                end
                if currentTarget then farmPlayer(currentTarget) end
            end
        end
    end)
end

---------------------------------------------------------
-- UI EVENTS
---------------------------------------------------------

AutoFarmBtn.MouseButton1Click:Connect(function()
    autoFarmEnabled = not autoFarmEnabled
    if autoFarmEnabled then
        AutoFarmBtn.Text = "Auto Farm & Skills C: ON"
        AutoFarmBtn.BackgroundColor3 = Color3.fromRGB(150, 0, 150)
        playerIndex = 1
        currentTarget = getNextTarget()
        startAutoFarm()
    else
        AutoFarmBtn.Text = "Auto Farm & Skills C: OFF"
        AutoFarmBtn.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
        if farmConnection then farmConnection:Disconnect() end
        currentTarget = nil
    end
end)

local function updatePlayerList()
    for _, child in ipairs(PlayerListFrame:GetChildren()) do if child:IsA("TextButton") then child:Destroy() end end
    for _, player in ipairs(Players:GetPlayers()) do
        if player ~= LocalPlayer then
            local PlayerBtn = Instance.new("TextButton")
            PlayerBtn.Size = UDim2.new(1, -10, 0, 40)
            PlayerBtn.BackgroundColor3 = (pinnedTarget == player) and Color3.fromRGB(150, 0, 0) or Color3.fromRGB(40, 40, 40)
            PlayerBtn.Text = (LocalPlayer:IsFriendsWith(player.UserId) and "ðŸ‘¥ " or "") .. player.Name
            PlayerBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
            PlayerBtn.Font = Enum.Font.Gotham
            PlayerBtn.Parent = PlayerListFrame
            local bC = Instance.new("UICorner") bC.CornerRadius = UDim.new(0, 8) bC.Parent = PlayerBtn
            
            PlayerBtn.MouseButton1Click:Connect(function()
                if pinnedTarget == player then pinnedTarget = nil else pinnedTarget = player end
                updatePlayerList()
            end)
        end
    end
    PlayerListFrame.CanvasSize = UDim2.new(0, 0, 0, ListLayout.AbsoluteContentSize.Y + 10)
end

MenuButton.InputEnded:Connect(function(input)
    if (input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch) and not dragging then
        MenuButton.Visible = false
        MainFrame.Visible = true
        MainFrame.Size = UDim2.new(0, 280, 0, 320)
        updatePlayerList()
    end
end)

CloseBtn.MouseButton1Click:Connect(function()
    MainFrame.Visible = false
    MenuButton.Visible = true
end)

Players.PlayerAdded:Connect(updatePlayerList)
Players.PlayerRemoving:Connect(updatePlayerList)
print("MC Auto Farm Fixed loaded!")
 player in ipairs(Players:GetPlayers()) do
        if player ~= LocalPlayer then
            local PlayerBtn = Instance.new("TextButton")
            PlayerBtn.Size = UDim2.new(1, -10, 0, 40)
            
            -- Check if player is friend
            local isFriend = LocalPlayer:IsFriendsWith(player.UserId)
            if isFriend then
                PlayerBtn.BackgroundColor3 = Color3.fromRGB(0, 120, 60) -- Green for friends
                PlayerBtn.Text = "ðŸ‘¥ " .. player.Name
            else
                PlayerBtn.BackgroundColor3 = Color3.fromRGB(40, 40, 40) -- Gray for non-friends
                PlayerBtn.Text = player.Name
            end
            
            PlayerBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
            PlayerBtn.TextSize = 14
            PlayerBtn.Font = Enum.Font.Gotham
            PlayerBtn.Parent = PlayerListFrame
            
            local BtnCorner = Instance.new("UICorner")
            BtnCorner.CornerRadius = UDim.new(0, 8)
            BtnCorner.Parent = PlayerBtn
            
            PlayerBtn.MouseButton1Click:Connect(function()
                if currentTarget == player then
                    -- Stop farming this player
                    currentTarget = nil
                    autoFarmEnabled = false
                    AutoFarmBtn.Text = "Auto Farm: OFF"
                    AutoFarmBtn.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
                    
                    -- Reset color based on friend status
                    if isFriend then
                        PlayerBtn.BackgroundColor3 = Color3.fromRGB(0, 120, 60)
                    else
                        PlayerBtn.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
                    end
                else
                    -- Switch to this player
                    currentTarget = player
                    autoFarmEnabled = false
                    AutoFarmBtn.Text = "Auto Farm: OFF"
                    AutoFarmBtn.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
                    
                    -- Update button colors
                    for _, btn in ipairs(PlayerListFrame:GetChildren()) do
                        if btn:IsA("TextButton") then
                            local btnPlayer = Players:FindFirstChild(btn.Text:gsub("ðŸ‘¥ ", ""))
                            if btnPlayer and LocalPlayer:IsFriendsWith(btnPlayer.UserId) then
                                btn.BackgroundColor3 = Color3.fromRGB(0, 120, 60)
                            else
                                btn.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
                            end
                        end
                    end
                    PlayerBtn.BackgroundColor3 = Color3.fromRGB(0, 100, 200)
                    
                    startAutoFarm()
                    autoFarmEnabled = true
                end
            end)
        end
    end
    
    PlayerListFrame.CanvasSize = UDim2.new(0, 0, 0, ListLayout.AbsoluteContentSize.Y + 10)
end

-- Toggle main frame
local guiOpen = false
MenuButton.InputEnded:Connect(function(input)
    if (input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch) and not dragging then
        guiOpen = not guiOpen
        
        if guiOpen then
            -- Hide menu button
            local menuFade = TweenService:Create(MenuButton, TweenInfo.new(0.3, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {
                Size = UDim2.new(0, 0, 0, 0),
                BackgroundTransparency = 1
            })
            menuFade:Play()
            menuFade.Completed:Connect(function()
                MenuButton.Visible = false
            end)
            
            -- Show GUI
            MainFrame.Visible = true
            MainFrame.Size = UDim2.new(0, 0, 0, 0)
            
            local openTween = TweenService:Create(MainFrame, TweenInfo.new(0.4, Enum.EasingStyle.Back, Enum.EasingDirection.Out), {
                Size = UDim2.new(0, 280, 0, 320)
            })
            openTween:Play()
            
            updatePlayerList()
        end
    end
end)

-- Close button functionality
CloseBtn.MouseButton1Click:Connect(function()
    guiOpen = false
    
    -- Hide GUI
    local closeTween = TweenService:Create(MainFrame, TweenInfo.new(0.3, Enum.EasingStyle.Back, Enum.EasingDirection.In), {
        Size = UDim2.new(0, 0, 0, 0)
    })
    closeTween:Play()
    closeTween.Completed:Connect(function()
        MainFrame.Visible = false
    end)
    
    -- Show menu button
    MenuButton.Visible = true
    MenuButton.Size = UDim2.new(0, 0, 0, 0)
    MenuButton.BackgroundTransparency = 1
    
    local menuShow = TweenService:Create(MenuButton, TweenInfo.new(0.4, Enum.EasingStyle.Back, Enum.EasingDirection.Out), {
        Size = UDim2.new(0, 80, 0, 80),
        BackgroundTransparency = 0
    })
    menuShow:Play()
end)

-- Update player list when players join/leave
Players.PlayerAdded:Connect(updatePlayerList)
Players.PlayerRemoving:Connect(updatePlayerList)

print("MC Auto Farm Script loaded successfully!")
