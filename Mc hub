-- Utility Functions
local function createTween(object, goal, duration, easingStyle, easingDirection)
    local tweenInfo = TweenInfo.new(
        duration or 0.3,
        easingStyle or Enum.EasingStyle.Quad,
        easingDirection or Enum.EasingDirection.Out
    )
    return TweenService:Create(object, tweenInfo, goal)
end

local function fetchScript(url)
    local success, response = pcall(function()
        return game:HttpGet(url)
    end)
    
    if success then
        return response
    else
        warn("Failed to fetch: " .. url)
        return nil
    end
end

local function executeScript(url)
    local raw = fetchScript(url)
    if not raw then return false end
    
    local func, err = loadstring(raw)
    if func then
        local success, result = pcall(func)
        return success
    else
        warn("Error loading script: " .. tostring(err))
        return false
    end
end

local function isCurrentGame(script)
    if not script.Active then return false end
    
    for _, placeId in pairs(script.PlaceIds) do
        if placeId == game.PlaceId then
            return true
        end
    end
    return false
end

