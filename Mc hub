-- Function ƒë·ªÉ t·∫°o script button
local function createScriptButton(scriptData, index)
    local isForThisGame = isCurrentGame(scriptData)
    
    local Button = Instance.new("TextButton")
    Button.Name = scriptData.Name
    Button.Size = UDim2.new(1, 0, 0, 60)
    Button.BackgroundColor3 = isForThisGame and Color3.fromRGB(46, 204, 113) or Color3.fromRGB(52, 73, 94)
    Button.BorderSizePixel = 0
    Button.Text = ""
    Button.AutoButtonColor = false
    Button.Parent = ContentFrame
    
    local ButtonCorner = Instance.new("UICorner")
    ButtonCorner.CornerRadius = UDim.new(0, 10)
    ButtonCorner.Parent = Button
    
    -- Icon
    local Icon = Instance.new("TextLabel")
    Icon.Size = UDim2.new(0, 40, 0, 40)
    Icon.Position = UDim2.new(0, 10, 0.5, -20)
    Icon.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
    Icon.BackgroundTransparency = 0.9
    Icon.Text = scriptData.Icon
    Icon.TextSize = 24
    Icon.Font = Enum.Font.GothamBold
    Icon.BorderSizePixel = 0
    Icon.Parent = Button
    
    local IconCorner = Instance.new("UICorner")
    IconCorner.CornerRadius = UDim.new(1, 0)
    IconCorner.Parent = Icon
    
    -- Text Container
    local TextContainer = Instance.new("Frame")
    TextContainer.Size = UDim2.new(1, -140, 1, 0)
    TextContainer.Position = UDim2.new(0, 60, 0, 0)
    TextContainer.BackgroundTransparency = 1
    TextContainer.Parent = Button
    
    local NameLabel = Instance.new("TextLabel")
    NameLabel.Size = UDim2.new(1, 0, 0.5, 0)
    NameLabel.BackgroundTransparency = 1
    NameLabel.Text = scriptData.Name
    NameLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    NameLabel.TextSize = 16
    NameLabel.Font = Enum.Font.GothamBold
    NameLabel.TextXAlignment = Enum.TextXAlignment.Left
    NameLabel.Parent = TextContainer
    
    local StatusLabel = Instance.new("TextLabel")
    StatusLabel.Size = UDim2.new(1, 0, 0.5, 0)
    StatusLabel.Position = UDim2.new(0, 0, 0.5, 0)
    StatusLabel.BackgroundTransparency = 1
    StatusLabel.Text = isForThisGame and "‚úÖ Compatible" or "‚ÑπÔ∏è Other Game"
    StatusLabel.TextColor3 = Color3.fromRGB(180, 180, 180)
    StatusLabel.TextSize = 12
    StatusLabel.Font = Enum.Font.Gotham
    StatusLabel.TextXAlignment = Enum.TextXAlignment.Left
    StatusLabel.Parent = TextContainer
    
    -- Execute Button
    local ExecuteBtn = Instance.new("TextButton")
    ExecuteBtn.Size = UDim2.new(0, 70, 0, 40)
    ExecuteBtn.Position = UDim2.new(1, -80, 0.5, -20)
    ExecuteBtn.BackgroundColor3 = Color3.fromRGB(138, 43, 226)
    ExecuteBtn.Text = "Execute"
    ExecuteBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
    ExecuteBtn.TextSize = 14
    ExecuteBtn.Font = Enum.Font.GothamBold
    ExecuteBtn.BorderSizePixel = 0
    ExecuteBtn.Parent = Button
    
    local ExecCorner = Instance.new("UICorner")
    ExecCorner.CornerRadius = UDim.new(0, 8)
    ExecCorner.Parent = ExecuteBtn
    
    -- Hover effect cho button ch√≠nh
    Button.MouseEnter:Connect(function()
        createTween(Button, {BackgroundColor3 = isForThisGame and Color3.fromRGB(56, 214, 123) or Color3.fromRGB(62, 83, 104)}, 0.2):Play()
    end)
    
    Button.MouseLeave:Connect(function()
        createTween(Button, {BackgroundColor3 = isForThisGame and Color3.fromRGB(46, 204, 113) or Color3.fromRGB(52, 73, 94)}, 0.2):Play()
    end)
    
    -- Hover effect cho execute button
    ExecuteBtn.MouseEnter:Connect(function()
        createTween(ExecuteBtn, {BackgroundColor3 = Color3.fromRGB(155, 89, 182)}, 0.2):Play()
        createTween(ExecuteBtn, {Size = UDim2.new(0, 75, 0, 43)}, 0.2, Enum.EasingStyle.Back):Play()
    end)
    
    ExecuteBtn.MouseLeave:Connect(function()
        createTween(ExecuteBtn, {BackgroundColor3 = Color3.fromRGB(138, 43, 226)}, 0.2):Play()
        createTween(ExecuteBtn, {Size = UDim2.new(0, 70, 0, 40)}, 0.2):Play()
    end)
    
    -- Execute functionality
    ExecuteBtn.MouseButton1Click:Connect(function()
        ExecuteBtn.Text = "..."
        
        -- Animation khi execute
        local originalColor = ExecuteBtn.BackgroundColor3
        createTween(ExecuteBtn, {BackgroundColor3 = Color3.fromRGB(46, 204, 113)}, 0.3):Play()
        
        task.spawn(function()
            local success = executeScript(scriptData.ScriptUrl)
            wait(0.5)
            
            if success then
                ExecuteBtn.Text = "‚úì"
                ExecuteBtn.BackgroundColor3 = Color3.fromRGB(46, 204, 113)
            else
                ExecuteBtn.Text = "‚úó"
                ExecuteBtn.BackgroundColor3 = Color3.fromRGB(231, 76, 60)
            end
            
            wait(2)
            ExecuteBtn.Text = "Execute"
            createTween(ExecuteBtn, {BackgroundColor3 = originalColor}, 0.3):Play()
        end)
    end)
    
    return Button
end

